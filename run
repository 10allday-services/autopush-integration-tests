#-!/bin/bash

clear

# parse the jenkins JOB_NAME into 3 parts
# 1. project name (i.e. shavar)
# 2. test type (i.e. integration-test, e2e-test, etc.)
# 3. test environment (ie. dev, stage or prod)

IFS='. ' read -r -a PARTS <<< "$JOB_NAME"
PROJECT=${PARTS[0]}
TEST_TYPE=${PARTS[1]}
TEST_ENV=${PARTS[2]}
docker run -e TEST_ENV=${TEST_ENV} -e GITHUB_ACCESS_TOKEN=${GITHUB_ACCESS_TOKEN} firefoxtesteng/${PROJECT}-${TEST_TYPE}
